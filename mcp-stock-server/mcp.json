{
  "mcpVersion": "2024-11-05",
  "name": "stock-prices-server",
  "version": "1.0.0",
  "description": "MCP server for fetching stock prices from multiple free data sources",
  "author": "BrightFlow",
  "license": "MIT",
  "homepage": "https://github.com/AlbrightLaboratories/brightflow-buy-sell-order",
  "server": {
    "command": "python",
    "args": ["-m", "src.server"],
    "env": {}
  },
  "tools": [
    {
      "name": "get_prices",
      "description": "Fetch stock price data from multiple free sources (Stooq, Alpha Vantage, Yahoo Finance)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "ticker": {
            "type": "string",
            "description": "Stock ticker symbol (e.g., AAPL, MSFT)",
            "pattern": "^[A-Z]{1,10}$"
          },
          "start": {
            "type": "string",
            "description": "Start date in YYYY-MM-DD format",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "end": {
            "type": "string",
            "description": "End date in YYYY-MM-DD format",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "adjusted": {
            "type": "boolean",
            "description": "Whether to return adjusted close prices",
            "default": true
          }
        },
        "required": ["ticker", "start", "end"]
      }
    },
    {
      "name": "get_current_price",
      "description": "Get current/latest price for a stock ticker",
      "inputSchema": {
        "type": "object",
        "properties": {
          "ticker": {
            "type": "string",
            "description": "Stock ticker symbol (e.g., AAPL, MSFT)",
            "pattern": "^[A-Z]{1,10}$"
          }
        },
        "required": ["ticker"]
      }
    }
  ]
}